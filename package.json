{
  "name": "redux-unfold-saga",
  "version": "1.2.5",
  "description": "A no headache middleware helper for redux-saga.",
  "license": "MIT",
  "repository": "manhhailua/redux-unfold-saga",
  "main": "dist/index.js",
  "types": "src/index.d.ts",
  "author": {
    "name": "Manh Pham",
    "email": "manhhailua@gmail.com",
    "url": "https://github.com/manhhailua"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "babel src -d dist",
    "clean": "rimraf dist",
    "commit": "npx git-cz",
    "copy-types": "npx cpx src/index.d.ts dist/",
    "coverage": "npm test -- --coverage",
    "docs": "documentation readme src/index.js --section=API",
    "flow": "flow check",
    "flowbuild": "flow-copy-source src dist",
    "lint": "eslint . --ignore-path .gitignore",
    "postbuild": "npm run copy-types",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "postdocs": "git add README.md",
    "prebuild": "npm run docs && npm run clean && npm run flowbuild",
    "preversion": "npm run lint && npm test && npm run build",
    "semantic-release": "semantic-release",
    "test": "jest",
    "version": "standard-changelog && git add CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "redux",
    "redux-saga"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "README.md",
            "yarn.lock"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "redux": "^4.0.1",
    "redux-saga": "^1.0.3"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-flow": "7.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.12",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.8.0",
    "documentation": "11.0.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "5.0.0",
    "eslint-plugin-flowtype": "3.10.3",
    "eslint-plugin-flowtype-errors": "4.1.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-prettier": "3.1.0",
    "flow-bin": "0.101.1",
    "flow-copy-source": "2.0.6",
    "husky": "2.4.1",
    "jest": "24.8.0",
    "lint-staged": "8.2.1",
    "opn-cli": "5.0.0",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "semantic-release": "^15.13.16",
    "standard-changelog": "2.0.11"
  }
}
