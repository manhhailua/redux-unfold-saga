{
  "name": "redux-unfold-saga",
  "version": "1.3.2",
  "description": "A no headache middleware helper for redux-saga.",
  "license": "MIT",
  "repository": "manhhailua/redux-unfold-saga",
  "main": "dist/index.js",
  "types": "src/index.d.ts",
  "author": {
    "name": "Manh Pham",
    "email": "manhhailua@gmail.com",
    "url": "https://github.com/manhhailua"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "babel src -d dist",
    "clean": "rimraf dist",
    "commit": "npx git-cz",
    "coverage": "npm test -- --coverage",
    "docs": "documentation readme src/index.js --section=API",
    "flow": "flow check",
    "flowbuild": "flow-copy-source src dist",
    "lint": "eslint . --ignore-path .gitignore",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "postdocs": "git add README.md",
    "prebuild": "npm run docs && npm run clean && npm run flowbuild",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "redux",
    "redux-saga"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "README.md",
            "yarn.lock"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "redux": "^4.0.4",
    "redux-saga": "^1.0.5"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-flow": "7.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "babel-eslint": "10.0.2",
    "babel-jest": "24.9.0",
    "documentation": "12.1.1",
    "eslint": "6.2.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.1.0",
    "eslint-plugin-flowtype": "4.2.0",
    "eslint-plugin-flowtype-errors": "4.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.0",
    "flow-bin": "0.105.2",
    "flow-copy-source": "2.0.8",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "lint-staged": "9.2.3",
    "opn-cli": "5.0.0",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "semantic-release": "^15.13.21"
  }
}
